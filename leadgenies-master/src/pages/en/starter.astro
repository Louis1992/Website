---
import Layout from '../../layouts/Layout.astro';
import HeaderLeadGenies from '../../components/leadgenies/HeaderLeadGenies.tsx';
import HeroLeadGeniesv2 from '../../components/leadgenies/HeroLeadGeniesv2.tsx';
import TrustSection from '../../components/leadgenies/TrustSection.tsx';
import HowItWorksSectionV5 from '../../components/leadgenies/HowItWorksSectionV5.tsx';
import ROICalculatorSection from '../../components/leadgenies/ROICalculatorSection.tsx';
import GuaranteeTempSection from '../../components/leadgenies/GuaranteeTempSection.tsx';
import CaseStudiesSection from '../../components/leadgenies/CaseStudiesSection.tsx';
import FAQSection from '../../components/leadgenies/FAQSection.tsx';
import PricingSection from '../../components/leadgenies/PricingSection.tsx';
import ContactSection from '../../components/leadgenies/ContactSection.tsx';
import FooterSection from '../../components/leadgenies/FooterSection.tsx';

const lang = 'en';
const pageVariant = 'starter';

const pageTitle = "LeadGenies Starter – Cold Calling for Growing B2B Companies";
const pageDescription = "Professional B2B cold calling designed for smaller companies. Everything included from €2,499/month.";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  type="LocalBusiness"
  lang={lang}
>
  <HeaderLeadGenies lang={lang} pageVariant={pageVariant} client:load />

  <main class="relative" style="margin: 0; padding: 0; overflow-x: hidden; width: 100%;">
    <h1 class="sr-only">LeadGenies Starter – Professional B2B Cold Calling for Growing Companies</h1>

    <section id="hero">
      <HeroLeadGeniesv2 lang={lang} pageVariant={pageVariant} client:load />
    </section>

    <TrustSection lang={lang} pageVariant={pageVariant} client:idle />

    <section id="how-it-works">
      <HowItWorksSectionV5 lang={lang} pageVariant={pageVariant} client:idle />
    </section>

    <section id="roi-calculator">
      <ROICalculatorSection lang={lang} client:idle />
    </section>

    <section id="guarantee">
      <GuaranteeTempSection lang={lang} client:idle />
    </section>

    <section id="case-studies">
      <CaseStudiesSection lang={lang} client:idle />
    </section>

    <FAQSection lang={lang} pageVariant={pageVariant} client:idle />

    <section id="pricing">
      <PricingSection lang={lang} pageVariant={pageVariant} client:idle />
    </section>

    <section id="contact">
      <ContactSection lang={lang} pageVariant={pageVariant} client:idle />
    </section>
  </main>

  <FooterSection lang={lang} client:load />
</Layout>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>
